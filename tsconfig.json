
{
    "compilerOptions": {
        "target": "ES2019",
        "lib": [
            "ES2020"
        ],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "sourceMap": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "./dist"
    },
    "include": [
        "./src/**/*",
    ]
}
